<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnDial"
            android:background="@android:drawable/stat_sys_phone_call"
            android:backgroundTint="@android:color/holo_green_dark" android:layout_marginTop="42dp"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toTopOf="@+id/editText2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintEnd_toStartOf="@+id/btnCall" android:layout_marginEnd="93dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDial" android:layout_marginBottom="560dp"
            android:hint="Informe o telefone"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCall" android:layout_marginTop="42dp"
            app:layout_constraintStart_toEndOf="@+id/btnDial" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="128dp"
    />
</android.support.constraint.ConstraintLayout>